<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="MoonyNavBarStyle" format="reference" />

    <declare-styleable name="MoonyNavBar">
        <attr name="backgroundColor" format="color" />
        <attr name="menu" format="reference" />
        <attr name="indicatorColor" format="color" />
        <attr name="iconSize" format="dimension" />
        <attr name="iconTintActive" format="color" />
        <attr name="iconTint" format="color" />

        <attr name="duration" format="integer" />

        <attr name="indicatorType">
            <flag name="none" value="2" />
            <flag name="point" value="1" />
            <flag name="line" value="0" />
        </attr>

        <attr name="indicatorPosition">
            <flag name="top" value="0" />
            <flag name="bottom" value="1" />
        </attr>
    </declare-styleable>
</resources>